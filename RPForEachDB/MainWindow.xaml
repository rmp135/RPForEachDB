<Window x:Class="RPForEachDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPForEachDB"
        mc:Ignorable="d"
        Title="RPForEachDB" Height="600" Width="800">
    <DockPanel Height="auto" VerticalAlignment="Stretch">
        <DockPanel DockPanel.Dock="Right" VerticalAlignment="Stretch" Height="auto" Width="auto" HorizontalAlignment="Stretch">
            <DockPanel>
                <Button DockPanel.Dock="Top" Click="OnRunBtnClick" Content="Run"/>
                <DataGrid DockPanel.Dock="Bottom" CanUserAddRows="False" SelectionChanged="DataGrid_SelectionChanged" MaxWidth="400" HorizontalAlignment="Stretch" ColumnWidth="*" AutoGenerateColumns="False" ItemsSource="{Binding Databases}">
                    <DataGrid.Columns>
                        <DataGridTextColumn IsReadOnly="True" Header="Name" Binding="{Binding Name}" />
                        <DataGridTextColumn IsReadOnly="True" Header="Status" Binding="{Binding Status}" />
                        <DataGridTemplateColumn Header="Run" Width="auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding Path=Checked, UpdateSourceTrigger=PropertyChanged}"></CheckBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
            <DockPanel>
                <Button DockPanel.Dock="Top" Content="Load File" VerticalAlignment="Top" Width="auto" Click="OnOpenFileBtnClick"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="100" MinHeight="100" Width="auto" DockPanel.Dock="Bottom" >
                    <TextBox IsReadOnly="True" TextWrapping="Wrap" Text="{Binding CurrentItem.LastMessage}" Height="auto"/>
                </ScrollViewer>
                <ScrollViewer VerticalScrollBarVisibility="Auto" DockPanel.Dock="Top" >
                    <TextBox AcceptsReturn="True" AcceptsTab="True" IsReadOnly="False" TextWrapping="Wrap" Text="{Binding CurrentSQL}" Height="auto" />
                </ScrollViewer>
            </DockPanel>
        </DockPanel>
    </DockPanel>
</Window>
